@model aplicacion_proyecto2.Models.TblPedido

@{
    ViewData["Title"] = "Edit";
}

@if (ViewData["Error"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @ViewData["Error"]
    </div>
}

<h1>Cancelar Pedido</h1>
<hr />

 <form method="post" class="form-floating">
    <div>
        <h2>¿Está seguro(a) que desea cancelar el pedido?</h2>
    </div>
    <br />
    <br />
    <div class="form-group">
        <input type="submit" asp-route-id="@ViewData["idReserva"]" value="Cancelar pedido" class="btn btn-danger" />
    </div>

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
