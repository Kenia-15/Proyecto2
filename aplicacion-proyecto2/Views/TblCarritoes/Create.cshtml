@model aplicacion_proyecto2.Models.TblCarrito

@{
    ViewData["Title"] = "Create";
}

<h4>Agregar producto al carrito</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label hidden asp-for="IdUsuario" class="control-label"></label>
                <select hidden asp-for="IdUsuario" class ="form-control" asp-items="ViewBag.IdUsuario"></select>
            </div>
            <div class="form-group">
                <label hidden asp-for="IdDetalleProducto" class="control-label"></label>
                <input hidden asp-for="IdDetalleProducto" class="form-control" value="@ViewData["IdDetalle"]" />
            </div>
            <div class="form-group">
                <label>Nombre del producto</label>
                <input disabled class="form-control" value="@ViewData["NombreProducto"]">
            </div>
            <div class="form-group">
                <label>Cantidad de productos disponibles</label>
                <input disabled value="@ViewData["Stock"]" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control">
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Añadir al carrito" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
