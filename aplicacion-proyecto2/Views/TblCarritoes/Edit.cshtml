@model aplicacion_proyecto2.Models.TblCarrito

@{
    ViewData["Title"] = "Edit";
}

<h4>Editar producto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCarrito" />
            <div class="form-group">
                <label hidden asp-for="IdUsuario" class="control-label"></label>
                <select hidden asp-for="IdUsuario" class="form-control" asp-items="ViewBag.IdUsuario"></select>
            </div>
            <div class="form-group">
                <label hidden asp-for="IdDetalleProducto" class="control-label"></label>
                <select hidden asp-for="IdDetalleProducto" class="form-control" asp-items="ViewBag.IdDetalleProducto"></select>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label">Modificar cantidad de productos</label>
                <input asp-for="Cantidad" class="form-control" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-route-id="@TempData["Usuario"]" asp-action="Carrito">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
