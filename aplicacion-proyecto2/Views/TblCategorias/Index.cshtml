@model IEnumerable<aplicacion_proyecto2.Models.TblCategoria>

@{
    ViewData["Title"] = "Index";
}

<h1>Categorías</h1>

<section>
    <div class="categorias">
        @foreach (var item in Model) {
        <article class="tarjeta">
                <h4>@Html.DisplayFor(modelItem => item.Categoria)</h4>
                <a asp-action="Productos" asp-controller="TblDetalleProductoes" asp-route-id="1" asp-route-idC="@item.IdCategoria">Ver productos</a>
        </article>
        }
    </div>
</section>
