@model MdlRegistro

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
    </div>
}
else if (TempData["MensajeExito"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["MensajeExito"]
    </div>
}

<div class="row" style="margin-left:20em;margin-top:2em">
    <div class="col-md-4">
        <h1 class="display-4 text-center">Registrarse</h1>
        <form asp-action="Registrar" >
            <div class="form-group">
                <label asp-for="personas.NumeroIdentificacion" class="control-label">Número de Cédula</label>
                *<input type="text" asp-for="personas.NumeroIdentificacion" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="personas.PrimerNombre" class="control-label">Primer Nombre</label>
                *<input type="text" asp-for="personas.PrimerNombre" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="personas.SegundoNombre" class="control-label">Segundo Nombre</label>
                <input type="text" asp-for="personas.SegundoNombre" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="personas.PrimerApellido" class="control-label">Primer Apellido</label>
                *<input type="text" asp-for="personas.PrimerApellido" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="personas.SegundoApellido" class="control-label">Segundo Apellido</label>
                *<input type="text" asp-for="personas.SegundoApellido" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="personas.IdMetodoPago" class="control-label">Método de Pago</label>
                *<select asp-for="personas.IdMetodoPago" class="form-select" asp-items="ViewBag.MetodosPago"></select>
            </div>
            <div class="form-group">
                <label asp-for="usuarios.Email" class="control-label">Email</label>
                *<input type="emal" asp-for="usuarios.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="usuarios.Contrasena" class="control-label">Contraseña</label>
                *<input type="password" asp-for="usuarios.Contrasena" class="form-control" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Registrarse" class="btn"/>
            </div>
        </form>
        <br />
        <li class="nav-item">
            ¿Ya tienes una cuenta? <a asp-area="" asp-controller="IniciarSesion" asp-action="">Iniciar Sesión</a>             
        </li>
    </div>
</div>

